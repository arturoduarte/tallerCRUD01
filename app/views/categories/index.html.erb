<p id="notice"><%= notice %></p>

<h1 class="text-center">Categorías</h1>

<div class="table-responsive">
	<table class="table table-striped table-hover ">
		<thead>
			<tr class="table-success">
				<th>Name</th>
				<th>Cantidad de Productos</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		
		<tbody>
			<% @categories.each do |category| %>
			<tr>
				<td><%= link_to category.name, category %></td>
				<td><%= category.products.count %></td>
				<td><%= link_to 'Editar', edit_category_path(category), class:'btn btn-warning' %>
				<%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Está Seguro?' }, class:'btn btn-danger' %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>

<br>

<%= link_to 'Nueva Categoría', new_category_path, class:'btn btn-primary' %>
