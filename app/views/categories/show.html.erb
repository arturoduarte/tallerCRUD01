<p id="notice"><%= notice %></p>

<div class="card bg-light large-padding text-center" style="width: 30rem;">
	<h3><strong>Nombre:</strong>
		<%= @category.name %>
	</h3>
	
	<div class="form-group input-group">
		<%= form_with(model:[@category, @product]) do |f| %>
		<label class="has-float-label">
			<%= f.text_field :name, autofocus: true, class:'form-control', placeholder:'nombre'  %>
			<span>Nombre</span>
		</label>
		
		<br>
		<label class="has-float-label">
			<%= f.number_field :price, class:'form-control', placeholder:'precio' %>
			<span>Precio</span>
		</label>
		
		<br>
		<%= f.submit 'Guardar', class:'btn btn-primary' %>
		<% end %>
	</div>
</div><br>

<div class="row">
	<div class="col-lg-6 col-md-8 col-xs-5">
		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">Nombre</th>
					<th scope="col">Precio</th>
					<th colspan="1"></th>
				</tr>
			</thead>
			<tbody>
				<% @product_All.each do |product| %>
				<tr>
					<td>		<%= product.name %></td>
					<td> <%= product.price %> </td>
					<td><%= link_to "Eliminar", category_product_path(@category, product), method: :delete, class:'btn btn-danger' %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>





<%= link_to 'Editar', edit_category_path(@category), class:'btn btn-warning' %>
<%= link_to 'Volver', categories_path, class:'btn btn-secondary' %>
